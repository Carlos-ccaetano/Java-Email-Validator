<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.portfolio.emailvalidator.EmailValidatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Validador de E-mails" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="emailInput" promptText="Digite o e-mail" />
    <Button text="Validar" onAction="validateEmail" />
    <Label fx:id="validationResult" />
    <Button text="Voltar" onAction="goBack" />
</VBox>

